if [ -f $HOME/Dropbox/.brew-github-token.sh ]; then
  source $HOME/Dropbox/.brew-github-token.sh
fi

if [ -f ~/.bashrc ]; then
  source ~/.bashrc
fi

# OPAM configuration
. $HOME/.opam/opam-init/init.sh > /dev/null 2> /dev/null || true

# on Linuxbrew machine
if [ "$HOME" = '/homes/gws/ztatlock' ]; then
  export PATH='$HOME/.linuxbrew/bin:$HOME/.linuxbrew/sbin':"$PATH"
fi
